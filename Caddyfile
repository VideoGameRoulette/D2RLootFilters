:3000

reverse_proxy /api/v2* backend:3001 {
    header_up Host {http.request.host}
}

reverse_proxy /auth* backend:3001 {
    header_up Host {http.request.host}
}

reverse_proxy /cms/admin* backend:3001 {
    header_up Host {http.reverse_proxy.upstream.host}
}

reverse_proxy frontend:3000 {
    header_up Host {http.reverse_proxy.upstream.host}
    flush_interval -1
}
